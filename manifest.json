{
  "manifest_version": 3,
  "name": "domai Extension",
  "version": "1.0.0",
  "permissions": ["sidePanel", "storage", "scripting", "activeTab", "tabs"],
  "host_permissions": ["https://chat.openai.com/*", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js", "edgeSensor.js"],
      "run_at": "document_end",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "side_panel": {
    "default_path": "pages/memo/memo.html",
    "open_panel_on_action_click": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
